<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UserFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_relativelayout"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="130dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="300px"
            android:id="@+id/img_avt"
            android:layout_height="300px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100px"
            android:src="@drawable/picture_1"
            ></de.hdodenhof.circleimageview.CircleImageView>

        <EditText
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="name_user"
            android:enabled="false"
            android:textAlignment="center"
            android:textSize="77px"></EditText>
        <LinearLayout
            android:background="@drawable/bg_button"
            android:layout_marginTop="100px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:textAlignment="center"
                android:gravity="center"
                android:src="@drawable/email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </ImageView>
            <EditText
                android:backgroundTint="@android:color/transparent"
                android:layout_marginEnd="30dp"
                android:id="@+id/edit_email"
                android:layout_gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:textSize="77px">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/bg_button"
            android:layout_marginTop="60px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:textAlignment="center"
                android:gravity="center"
                android:src="@drawable/baseline_local_phone_24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </ImageView>
            <EditText
                android:backgroundTint="@android:color/transparent"
                android:layout_marginEnd="30dp"
                android:id="@+id/edit_phone"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:textSize="77px">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="60px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:orientation="horizontal">
            <ImageView
                android:textAlignment="center"
                android:gravity="center"
                android:src="@drawable/location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </ImageView>
            <EditText
                android:backgroundTint="@android:color/transparent"
                android:layout_marginEnd="30dp"
                android:id="@+id/edit_dc"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:textSize="77px">
            </EditText>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_update"
            android:visibility="invisible"
            android:enabled="false"
            android:layout_marginTop="50px"
            android:text="Cập nhập"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="InvalidId">
        </TextView>
        <TextView
            android:background="@drawable/bg_search"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/bt_edit"
            android:text="Edit"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:layout_marginTop="230px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px">
        </TextView>
        <TextView
            android:background="@drawable/bg_search"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/bt_out"
            android:text="Log Out"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:layout_marginTop="15px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px">
        </TextView>
    </LinearLayout>

</FrameLayout>