<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Pay"
    android:background="#FEFEFE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:background="#AEB0B2"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Thông Tin Thanh Toán"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textAlignment="center">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edittextname_pay"
                android:layout_margin="5dp"
                android:hint="Nhập tên người nhận"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edittextsdt_pay"
                android:layout_margin="5dp"
                android:hint="Nhập Số điện thoại"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edittextemail_pay"
                android:layout_margin="5dp"
                android:hint="Nhập email người nhận"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edittextdc_pay"
                android:layout_margin="5dp"
                android:hint="Nhập địa chỉ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/back_pay"
                android:layout_marginRight="50dp"
                android:backgroundTint="#ACA8A8"
                android:text="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:id="@+id/ok_pay"
                android:backgroundTint="#ACA8A8"
                android:text="OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>