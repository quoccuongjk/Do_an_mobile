<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_User">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A4B9B9"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="130dp">

        <ImageView
            android:id="@+id/back_user"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:src="@drawable/back_profile"></ImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avt_user"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:src="@drawable/picture_1"
            app:civ_border_color="@color/black"
            app:civ_border_width="4px"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/name_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="Name"
            android:textAlignment="center"
            android:textSize="77px"></TextView>
        <LinearLayout
            android:layout_marginTop="80px"
            android:layout_marginLeft="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:text="Email:     "
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </TextView>
            <EditText
                android:layout_gravity="center"
                android:enabled="false"
                android:id="@+id/email_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:textSize="77px">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30px"
            android:layout_marginLeft="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:text="Phone:    "
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </TextView>
            <EditText
                android:enabled="false"
                android:id="@+id/sdt_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:textSize="77px">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30px"
            android:layout_marginLeft="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:text="Địa chỉ:   "
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </TextView>
            <EditText
                android:enabled="false"
                android:id="@+id/diachi_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:textSize="77px">
            </EditText>
        </LinearLayout>
        <TextView
            android:id="@+id/update_profile"
            android:visibility="invisible"
            android:enabled="false"
            android:layout_marginTop="20px"
            android:text="Cập nhập"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:id="@+id/edit_user"
            android:text="Edit"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#FB0202"
            android:backgroundTint="#A3B8B8"
            android:layout_marginTop="400px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px">
        </Button>
        <Button
            android:id="@+id/out_user"
            android:text="Log Out"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#FB0202"
            android:backgroundTint="#A3B8B8"
            android:layout_marginTop="5px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px">
        </Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>